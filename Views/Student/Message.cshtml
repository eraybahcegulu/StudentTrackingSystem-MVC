@model Student

<div class="container">
    <div class="row pt-3 justify-content-center">
        <div class="col-8">
            <div class="card" style="height: 100%;">
                <div class="card-header">
                    <h2>Update Message for @Model.StudentName @Model.StudentSurname (@Model.StudentNo)</h2>
                </div>
                <div class="card-body" style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
                    <form method="post" style="width: 100%;">
                        <div class="form-group">
                            <label asp-for="Message">Last Message Sent:</label>
                            <textarea asp-for="Message" class="form-control" rows="4" style="margin-top:5px; resize: none; width:100%; height:100%"></textarea>
                        </div>
                        <button style="margin-top: 10px" type="submit" class="btn btn-lg btn-primary">Update Message</button>

                        <a asp-controller="Student" asp-action="Index" class="btn btn-lg btn-secondary" style=" margin-top: 10px;">
                            Back to Students
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
